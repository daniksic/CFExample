@model Claudia.Domain.Models.v1.Link
@{
    Layout = "~/Views/CMS/_LayoutPage.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.ServerFileName)
    @Html.HiddenFor(model => model.ClientLocalFileName)
    @Html.HiddenFor(model => model.DateTimeStamp)
    <div class="container">
        <div class="row" style="padding-left: 10px; padding-right: 10px;">
            <h2>Insert new picture</h2>
            <hr />
            <div class="form-group">
                <p>Title:</p>
                @Html.EditorFor(model => model.Title, new { @placeholder = "Insert title here", @required = "required", @maxlength = "200", @class = "form-control input-md" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
            <div class="form-group">
                <p>Description:</p>
                @Html.EditorFor(model => model.Description, new { @placeholder = "Your name here", @required = "required", @maxlength = "50", @class = "form-control input-md", @rows="8", @cols="50" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            <div class="form-group">
                <p>Is deleted:</p>
                @Html.EditorFor(model => model.IsDeleted, new { @placeholder = "Write directions here...", @required = "required", @class = "form-control input-md", @rows = "8" })
                @Html.ValidationMessageFor(model => model.IsDeleted)
            </div>
            <div class="form-group">
                <input type="file" id="file" name="file" accept="image/*" />
            </div>
            <hr />
            <p class="pull-right">
                <input type="submit" value="Save to database" class="btn btn-success" /> | @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger" })
            </p>
        </div>
        <br />
    </div>
}